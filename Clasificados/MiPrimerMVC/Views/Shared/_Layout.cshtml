@using Domain.Entities
@model MiPrimerMVC.Models.PostModel
<!DOCTYPE html>
<link href="~/Content/SideBar.css" rel="stylesheet" />
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Guest", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Guest")</li>
                    <li>@Html.ActionLink("About", "About", "Guest")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Guest")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="content" class='row'>
            <div class="col-md-1" id="sidebar-wrapper">
                <nav id="spy">
                    <ul class="sidebar-nav nav">
                        <li class="sidebar-brand">
                            @Html.ActionLink("Index", "Index", "Guest")
                        </li>
                        <li>
                            <a href="#anch2" data-scroll>
                                <span class="glyphicon ">New Posts</span>
                            </a>
                        </li>
                        <li>
                            <a href="#anch2" data-scroll>
                                <span class="fa fa-anchor solo">Top Posts</span>
                            </a>
                        </li>
                        <li>
                            <a href="#anch3" data-scroll>
                                <span class="fa fa-anchor solo">My Favorite</span>
                            </a>
                        </li>
                        <li>
                            <a href="#anch4" data-scroll>
                                <span class="fa fa-anchor solo">My Posts</span>
                            </a>
                        </li>
                        <li>
                            <a href="#anch4" data-scroll>
                                @Html.ActionLink("New Post", "NewPost", "Registered")

                            </a>
                        </li>
                        <li>
                            <a href="#anch4" data-scroll>
                                <span class="fa fa-anchor solo">FAQs</span>
                            </a>
                        </li>
                        <li>
                            <a href="#anch4" data-scroll>
                                <span class="fa fa-anchor solo">Terms and Conditions</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="col-md-10  container body-content ">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>

            <div class="col-md-1">
                <ul>
 
                        <li>
                            <a href="#anch2" data-scroll>
                                <span class="fa fa-anchor solo">Tecnologia</span>
                            </a>
                        </li>

                    
                </ul>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
